<h1>Responsáveis</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome</th>
      <th>Data de nascimento</th>
      <th>Sexo</th>
      <th>Cpf</th>
      <th>Cep</th>
      <th>Endereco</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsaveis.each do |responsavel| %>
      <tr>
        <td><%= image_tag(responsavel.foto_url, :width => 100) if responsavel.foto.present? %></td>
        <td><%= responsavel.nome %></td>
        <td><%= responsavel.data_de_nascimento %></td>
        <td><%= responsavel.sexo %></td>
        <td><%= responsavel.cpf %></td>
        <td><%= responsavel.cep %></td>
        <td><%= responsavel.endereco %></td>
        <td><%= responsavel.complemento %></td>
        <td><%= responsavel.bairro %></td>
        <td><%= responsavel.cidade %></td>
        <td><%= responsavel.uf %></td>
        <td><%= responsavel.telefone %></td>
        <td><%= responsavel.email %></td>
        <td><%= link_to 'Show', responsavel %></td>
        <td><%= link_to 'Edit', edit_responsavel_path(responsavel) %></td>
        <td><%= link_to 'Destroy', responsavel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Responsável', new_responsavel_path %>
