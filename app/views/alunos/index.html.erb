<h1>Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome</th>
      <th>Data de nascimento</th>
      <th>Sexo</th>
      <th>Rg</th>
      <th>Cpf</th>
      <th>Cep</th>
      <th>Endereco</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Telefone emergencial</th>
      <th>Email</th>
      <th>Respons√°vel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= image_tag(aluno.foto_url, :width => 100) if aluno.foto.present?  %></td>
        <td><%= aluno.nome %></td>
        <td><%= aluno.data_de_nascimento %></td>
        <td><%= aluno.sexo %></td>
        <td><%= aluno.rg %></td>
        <td><%= aluno.cpf %></td>
        <td><%= aluno.cep %></td>
        <td><%= aluno.endereco %></td>
        <td><%= aluno.complemento %></td>
        <td><%= aluno.bairro %></td>
        <td><%= aluno.cidade %></td>
        <td><%= aluno.uf %></td>
        <td><%= aluno.telefone_emergencial %></td>
        <td><%= aluno.email %></td>
        <td></td>
        <td><%= link_to 'Exibir', aluno %></td>
        <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Remover', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

